<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Time to read:</strong>
    <%= post.time_to_read %>
  </p>
      
     <%= image_tag post.avatar_url,style: 'height:150px;width:250px;'  %>
</div>
